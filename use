        local function Chat(msg)
            game.Players:Chat(msg)
        end



local function activateItems(speaker, args)
	local Backpack = speaker:FindFirstChildOfClass("Backpack")
	local amount = tonumber(args[1]) or 1
	local delayEnabled = args[2] and args[2]:lower() == "true" or false

	for _, v in ipairs(Backpack:GetChildren()) do
		v.Parent = speaker.Character
		task.spawn(function()
			for _ = 1, amount do
				v:Activate()
				if delayEnabled then
					wait(0.1)
				end
			end
			v.Parent = Backpack
		end)
	end
end

activateItems(game.Players.LocalPlayer, {3, "true"})


wait(5)

        
        Chat("ungear me")
